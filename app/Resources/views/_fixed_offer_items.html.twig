{% if singlePriceOfferItems is not empty %}
    <table class="table table-bordered table-hover bg-info">
        <caption><h4>Fixed Price Items</h4></caption>
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Net Price</th>
            <th scope="col">Gross Price</th>
            <th scope="col">Currency</th>
            <th scope="col">%VAT</th>
            <th scope="col">Vat Amount</th>
            <th scope="col">Discount Amount</th>
            <th scope="col">Aviable Discount</th>
        </tr>
        </thead>
        <tbody>

        {% for singlePriceOfferItem in singlePriceOfferItems %}
            {% set cId = singlePriceOfferItem.itemSnapshot.costItem.id %}
            <tr>
                <th scope="row">{{ loop.index }}</th>
                <td>{{ singlePriceOfferItem.name }}</td>
                <td class="netprice">{{ singlePriceOfferItem.netPrice }}</td>
                <td class="grossprice">{{ singlePriceOfferItem.grossPrice }}</td>
                <td>{{ singlePriceOfferItem.currency }}</td>
                <td>{{ singlePriceOfferItem.vat }}</td>
                <td class="vat-amount">{{ singlePriceOfferItem.vatAmount }}</td>
                <td class="discount-amount">{{ singlePriceOfferItem.getDiscountAmount }}</td>
                {% if attribute(form, "item-#{cId}-discount") is defined %}
                    <td>
                        {{ form_row(attribute(form, "item-#{cId}-discount")) }}
                    </td>
                {% endif %}
            </tr>
        {% endfor %}

        </tbody>
    </table>
{% endif %}
