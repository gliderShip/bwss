
    {{ form_start(form) }}

    {% dump offer %}
    {% dump form %}


    <h3>{{ offer.serviceSnapshot.name }} Service Offer</h3>

    <table class="table table-bordered table-hover ">
        <caption>Fixed Price Items</caption>
        <thead >
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Net Price</th>
            <th scope="col">Gross Price</th>
            <th scope="col">Currency</th>
            <th scope="col">%VAT</th>
        </tr>
        </thead>
        <tbody>

        {% for singlePriceOfferItem in singlePriceOfferItems %}
            <tr>
                <th scope="row">1</th>
                <td>{{ singlePriceOfferItem.itemSnapshot.name }}</td>
                <td>{{ singlePriceOfferItem.itemSnapshot.netPrice }}</td>
                <td>{{ singlePriceOfferItem.itemSnapshot.grossPrice }}</td>
                <td>{{ singlePriceOfferItem.itemSnapshot.currency }}</td>
                <td>{{ singlePriceOfferItem.itemSnapshot.vat }}</td>
            </tr>
        {% endfor %}

        </tbody>
    </table>

    <table class="table table-bordered table-hover ">
        <caption>Hourly Priced {{ offer.serviceSnapshot.name }} Items. Please Provide the hours for each item</caption>
        <thead >
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Net Price</th>
            <th scope="col">Gross Price</th>
            <th scope="col">Currency</th>
            <th scope="col">%VAT</th>
            <th scope="col">Billed Hours</th>
        </tr>
        </thead>
        <tbody>

        {% for rentableOfferItem in rentableOfferItems %}}

        <tr>
            <th scope="row">1</th>
            <td>{{ rentableOfferItem.itemSnapshot.name }}</td>
            <td>{{ rentableOfferItem.itemSnapshot.netPrice }}</td>
            <td>{{ rentableOfferItem.itemSnapshot.grossPrice }}</td>
            <td>{{ rentableOfferItem.itemSnapshot.currency }}</td>
            <td>{{ rentableOfferItem.itemSnapshot.vat }}</td>
            <td> {{ form_row(attribute(form, rentableOfferItem.itemSnapshot.name)) }} </td>
        </tr>
        {% endfor %}

        </tbody>
    </table>

    {#{% dump form.items %}#}

    {#{{ form_row(form.items) }}#}
    {{ form_widget(form) }}
    {{ form_end(form) }}
